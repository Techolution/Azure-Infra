{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
  },
  "variables": {
    "apiVersion": "2015-06-15"
  },
  "resources": [
   {
      "apiVersion": "2017-05-10",
      "name": "linkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
          "mode": "incremental",
          "parametersLink": {
              "uri":"https://raw.githubusercontent.com/Techolution/Azure-Infra/master/azuredeploy.parameters.json",
              "contentVersion":"1.0.0.0"
           }
       }
   },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[reference('linkedTemplate').parameters('vnetName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[reference('linkedTemplate').parameters('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[reference('linkedTemplate').parameters('subnet1Name')]",
            "properties": {
              "addressPrefix": "[reference('linkedTemplate').parameters('subnet1Prefix')]"
            }
          },
          {
            "name": "[reference('linkedTemplate').parameters('subnet2Name')]",
            "properties": {
              "addressPrefix": "[reference('linkedTemplate').parameters('subnet2Prefix')]"
            }
          }
        ]
      }
    }
  ]
}
